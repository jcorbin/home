#!/bin/sh
# after: arrayutil

export GOPATH=$HOME/golang
export PATH=$(IFS=:; append "$GOPATH/bin" $PATH)

goclone()
{
    name="$1"
    dest="$GOPATH/src/$name"
    [ -d "$dest" ] || mkdir -p "$dest"
    case "$name" in
    gh/*)
        goclone "github.com/${name#*/}"
        ;;
    github.com/*)
        git clone "gh:${name#*/}" "$dest"
        ;;

    *)
        echo "Not sure how to goclone $name" >&2
        return 1
        ;;
    esac
}
