#!/bin/bash
# after: editor

nvim_path=$(which nvim 2>/dev/null)
if [ -x "$nvim_path" ]; then
    export EDITOR=$nvim_path

    alias vi='nvim'
    alias vim='nvim'
    alias vimdiff='nvim -dO'
    alias view='nvim -R'

    # TODO: would be nice to push these down into .config/nvim/init.vim
    export NVIM_TUI_ENABLE_CURSOR_SHAPE=1
fi
