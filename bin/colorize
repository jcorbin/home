#!/usr/bin/env python3

import errno
import os
import sys

from pygments import highlight
from pygments.lexers import get_lexer_for_filename, guess_lexer, TextLexer
from pygments.formatters.terminal256 import Terminal256Formatter
from pygments.formatters.terminal import TerminalFormatter
from pygments.util import ClassNotFound

TERM = os.environ.get('TERM')

options = {
    'style': 'monokai',
    'encoding': 'utf-8'
}

filename = sys.argv[1]

Formatter = Terminal256Formatter if '256' in TERM else TerminalFormatter
formatter = Formatter(**options)

lexer = None


def colorize(code):
    global lexer
    if not lexer:
        try:
            lexer = guess_lexer(code, **options)
        except ClassNotFound:
            pass
    if not lexer:
        lexer = TextLexer(**options)
    highlight(code, lexer, formatter, sys.stdout)

try:
    if filename == '-':
        code = sys.stdin.read()
        colorize(code)
    else:
        try:
            lexer = get_lexer_for_filename(filename, **options)
        except ClassNotFound:
            lexer = None
        with open(filename, 'rb') as f:
            code = f.read()
            colorize(code)

except IOError as err:
    if err.errno is not errno.EPIPE:
        raise
