#!/bin/bash
set -e

cmd=$1
shift

usage()
{
    if [ $# -gt 0 ]; then
        echo "$@" >&2
        echo >&2
    fi
    echo "Usage: $0 open|start|check|exit|stop remote [remote [remote [...]]]" >&2
    exit 1
}

start()
{
    remote=$1
    echo -n "$remote: "
    if ssh $remote -O check >/dev/null 2>&1; then
        echo "up."
    else
        ssh $remote -MfN
        echo "started."
    fi
}

maybe_command()
{
    command=$1
    remote=$2
    echo -n "$remote: "
    if ssh $remote -O check >/dev/null 2>&1; then
        ssh $remote -O $command >/dev/null
        echo "$command sent."
    else
        echo "down."
    fi
}

case "$cmd" in

    start)
        for remote in "$@"; do
            start $remote
        done
        ;;

    status|check)
        for remote in "$@"; do
            echo -n "$remote: "
            ssh $remote -O check 2>&1
        done
        ;;

    exit)
        for remote in "$@"; do
            maybe_command exit $remote
        done
        ;;

    stop)
        for remote in "$@"; do
            maybe_command stop $remote
        done
        ;;

    open)
        for remote in "$@"; do
            start $remote
            set -x
            if [ -n "$TMUX" ]; then
                tmux new-window -n "$remote" -- "ssh -t $remote 'tmux ls >/dev/null 2>&1 && tmux attach || tmux new'"
            else
                ssh -t $remote tmux ls \>/dev/null 2\>\&1 \&\& tmux attach \|\| tmux new
            fi
            set +x
        done
        ;;

    help|-h|--help)
        usage
        ;;

    *)
        usage "Invalid command $cmd"
        ;;

esac
